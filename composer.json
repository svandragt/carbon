{
    "name": "svandragt/cuttlefish",
    "description": "Hackable web framework.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sander van Dragt",
            "email": "sander@vandragt.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
      "php": ">=7.4",
      "michelf/php-markdown": "^1.9",
      "vlucas/phpdotenv": "^5",
      "ext-curl": "*",
      "ext-simplexml": "*",
      "ext-fileinfo": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Cuttlefish\\": "src/system",
            "Cuttlefish\\Blog\\": "src/application"
        }
    },
    "config": {
        "process-timeout": 0,
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "scripts": {
        "guest:setup": [
            "rm -rf vendor; composer install --ansi --no-progress --prefer-source",
            "npm ci --no-progress",
            "php -r \"copy('Configuration.php.dist', 'Configuration.php');\"",
            "phive --no-progress install --trust-gpg-keys 31C7E470E2138192,8A03EA3B385DBAA1"
        ],
        "prepare-commit": [
            "phpcbf",
            "@lint"
        ],
        "lint": [
            "find src/ -type f -name '*.php' -print0 | xargs -0 -n1 -P4 php -l -n | (! grep -v 'No syntax errors detected' )",
            "phpcs"
        ],
        "serve": [
            "export $(cat .env | xargs) && php -S localhost:8080 -t src/"
        ]
    }
}
