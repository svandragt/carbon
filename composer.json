{
    "name": "svandragt/cuttlefish",
    "description": "Hackable web framework.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sander van Dragt",
            "email": "sander@vandragt.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-simplexml": "*",
        "gabordemooij/redbean": "^5.7",
        "michelf/php-markdown": "^1.9",
        "vlucas/phpdotenv": "^5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Cuttlefish\\": "site/www/system",
            "Cuttlefish\\Blog\\": "site/www/application"
        }
    },
    "config": {
        "process-timeout": 0,
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true,
        "vendor-dir": "site/www/vendor"
    },
    "scripts": {
        "setup": [
            "rm -rf site/www/vendor; composer install --ansi --no-progress --prefer-source",
            "npm ci --no-progress",
            "php -r \"copy('Configuration.php.dist', 'site/www/Configuration.php');\"",
            "command -v phive && phive --no-progress install --trust-gpg-keys 31C7E470E2138192,8A03EA3B385DBAA1"
        ],
        "prepare-commit": [
            "phpcbf",
            "@lint"
        ],
        "lint": [
            "find site/www -type f -name '*.php' -not -path 'site/www/vendor/*' -print0 | xargs -0 -n1 -P4 php -l -n | (! grep -v 'No syntax errors detected' )",
            "phpcs"
        ],
        "serve": [
            "php -S localhost:8080 -t site/www/"
        ]
    }
}
